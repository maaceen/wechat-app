  /* pages/register/register.wxss */
.register-container {
  min-height: 100vh;
  padding: 40rpx;
  background: linear-gradient(to bottom, #f5f7fa 0%, #e4e8eb 100%);
}

.register-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
  border-radius: 50%;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.register-form {
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.05);
}

.van-cell-group--inset {
  margin: 0;
  background: transparent;
}

.van-field__label {
  color: #666;
  font-size: 30rpx;
}

.agreement {
  margin-top: 30rpx;
  font-size: 26rpx;
  color: #666;
  display: flex;
  align-items: center;
}

.link {
  color: #1989fa;
  margin-left: 4rpx;
}

.register-btn {
  margin-bottom: 40rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 34rpx;
  background: linear-gradient(to right, #07c160, #05a14e);
  border: none;
}

.register-btn--disabled {
  opacity: 0.6;
}

.login-link {
  text-align: center;
  font-size: 28rpx;
  color: #666;
}