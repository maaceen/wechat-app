}

/* 按钮样式改造 */
van-button {
  background: #fff !important;
  border: 2rpx solid #e0d7c6 !important;
  color: #66594d !important;
  transition: all 0.3s;
}

van-button[color="#4fc08d"] {
  border-color: #d4a373 !important;
  background: #fff4e6 !important;
  color: #d94f44 !important;
}

van-button:active {
  transform: scale(0.96);
  opacity: 0.9;
}

/* 收藏按钮特效 */
van-button[name="star"] {
  position: relative;
  overflow: hidden;
}

van-button[name="star"]::after {
  content: "★";
  position: absolute;
  color: #ffd700;
  font-size: 48rpx;
  opacity: 0;
  animation: starPop 0.6s ease-out;
}

@keyframes starPop {
  0% { transform: scale(0); opacity: 1; }
  100% { transform: scale(3); opacity: 0; }
}

/* 空状态插画 */
van-empty image {
  width: 300rpx !important;
  height: 300rpx !important;
  content: url('https://example.com/empty-errorbook.png'); /* 替换为空状态插画 */
}

