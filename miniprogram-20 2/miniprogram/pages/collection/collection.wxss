/* 错题卡片（模拟真实纸张） */
.card {
  background: #fffcf5;
  border: 1rpx solid #e0d7c6;
  border-radius: 8rpx;
  margin: 30rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(175, 135, 100, 0.1);
  position: relative;
  min-height: 400rpx;
}

/* 模拟装订线效果 */
.card::before {
  content: '';
  position: absolute;
  left: -10rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 20rpx;
  height: 80%;
  background: repeating-linear-gradient(
    180deg,
    #d4a373 0rpx,
    #d4a373 10rpx,
    transparent 10rpx,
    transparent 20rpx
  );
  border-radius: 8rpx 0 0 8rpx;
}

/* 模拟手写批注效果 */
.hilight-text {
  color: #d94f44 !important;
  font-weight: bold;
  text-shadow: 2rpx 2rpx 4rpx rgba(217, 79, 68, 0.1);
  position: relative;
  display: inline-block;
  padding: 0 8rpx;
}

.hilight-text::after {
  content: '';
  position: absolute;
  left: 0;
  bottom: -4rpx;
  width: 100%;
  height: 6rpx;
  background: rgba(217, 79, 68, 0.2);
  border-radius: 3rpx;
}

/* 题目类型标签 */
.info text[class*="hilight-text"]:last-child {
  background: #fff2f1;
  border: 2rpx solid #ffd8d5;
  border-radius: 6rpx;
  padding: 8rpx 16rpx;
  transform: rotate(-2deg);
}

/* 选项样式（模拟答题卡） */
.question-options view {
  background: #fff;
  border: 2rpx solid #e0d7c6;
  border-radius: 12rpx;
  padding: 28rpx 40rpx;
  position: relative;
  transition: all 0.3s cubic-bezier(0.18, 0.89, 0.32, 1.28);
}

/* 正确/错误状态 */
.question-options view.correct {
  background: #f0fff0;
  border-color: #8bc34a;
  box-shadow: 0 4rpx 12rpx rgba(139, 195, 74, 0.2);
}

.question-options view.error {
  background: #fff0f0;
  border-color: #ff6666;
  box-shadow: 0 4rpx 12rpx rgba(255, 102, 102, 0.2);
  animation: shake 0.4s ease;
}

/* 错误抖动动画 */
@keyframes shake {
  0%, 100% { transform: translateX(0); }
  25% { transform: translateX(-8rpx); }
  75% { transform: translateX(8rpx); }
}

/* 答案解析区 */
.desc_block {
  background: #f8f4e8;
  border: 2rpx dashed #e0d7c6;
  border-radius: 12rpx;
  margin-top: 40rpx;
  padding: 32rpx;
  position: relative;
}

.desc_block::before {
  content: "✎ 解析";
  position: absolute;
  top: -18rpx;
  left: 30rpx;
  background: #f8f4e8;
  padding: 0 16rpx;
  color: #d4a373;
  font-size: 24rpx;
  font-weight: bold;
}

