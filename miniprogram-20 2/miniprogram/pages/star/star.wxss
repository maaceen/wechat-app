/* 收藏卡片（烫金效果） */
.card {
  background: #fffcf5;
  border: 1px solid #e6d5b8;
  border-radius: 12px;
  margin: 30rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(230, 213, 184, 0.15);
  position: relative;
  min-height: 400rpx;
}

/* 烫金边框 */
.card::before {
  content: '';
  position: absolute;
  top: -2px;
  left: -2px;
  right: -2px;
  bottom: -2px;
  border: 2px solid #ffd700;
  border-radius: 14px;
  opacity: 0.3;
}

/* 收藏标记 */
.info::after {
  content: '★';
  color: #ffd700;
  font-size: 40rpx;
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  text-shadow: 0 4rpx 8rpx rgba(255, 215, 0, 0.3);
}

/* 题目序号 */
.hilight-text {
  color: #d4af37 !important;
  font-family: '楷体';
  text-shadow: 2rpx 2rpx 4rpx rgba(212, 175, 55, 0.1);
}

/* 选项设计（羊皮纸效果） */
.question-options view {
  background: #fef9f0;
  border: 1px solid #e6d5b8;
  border-radius: 8px;
  padding: 24rpx 32rpx;
  margin: 16rpx 0;
  transition: all 0.3s;
  position: relative;
}

.question-options view::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 8rpx;
  height: 100%;
  background: linear-gradient(to bottom, #ffd70033, #ffd70000);
}

/* 正确/错误状态 */
.question-options view.correct {
  background: #f8ffe6;
  border-color: #c0d16e;
}

.question-options view.error {
  background: #fff0f0;
  border-color: #ffb3b3;
}

/* 答案解析区（古籍批注风格） */
.desc_block {
  background: #fff8e7;
  border: 1px dashed #d4af37;
  border-radius: 8px;
  padding: 32rpx;
  margin-top: 40rpx;
  position: relative;
}

.desc_block::after {
  content: '※';
  color: #d4af37;
  font-size: 48rpx;
  position: absolute;
  right: 20rpx;
  top: -24rpx;
}

/* 底部操作栏 */
.footer {
  background: #fff8e1;
  border-top: 1px solid #e6d5b8;
  box-shadow: 0 -8rpx 24rpx rgba(230, 213, 184, 0.1);
}

/* 按钮特效 */
van-button {
  background: linear-gradient(45deg, #fff3d9, #fffaf3) !important;
  border: 1px solid #e6d5b8 !important;
  color: #b08f26 !important;
  transition: all 0.3s;
}

van-button:active {
  transform: scale(0.96);
  background: linear-gradient(45deg, #ffebc2, #fff3d9) !important;
}

/* 加载动画 */
.loading {
  background: rgba(255, 253, 247, 0.9);
}

van-loading__spinner {
  color: #d4af37 !important;
}

/* 空状态 */
van-empty image {
  width: 300rpx !important;
  height: 300rpx !important;
  content: url('https://example.com/empty-star.png'); /* 替换为收藏空状态插画 */
}

van-empty description {
  color: #b08f26 !important;
