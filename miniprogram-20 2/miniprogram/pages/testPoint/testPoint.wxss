/* pages/chapter-practice/chapter-practice.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  padding: 30rpx 0;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.chapter-list {
  margin-top: 30rpx;
}

.chapter-card {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.chapter-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.chapter-info {
  flex: 1;
}

.chapter-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.chapter-desc {
  font-size: 26rpx;
  color: #666;
}

.chapter-arrow {
  width: 40rpx;
  height: 40rpx;
}

.chapter-arrow image {
  width: 100%;
  height: 100%;
}