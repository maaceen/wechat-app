/* pages/login/login.wxss */
.login-container {
  position: relative;
  height: 100vh;
  padding: 40rpx;
  background: linear-gradient(135deg, #f0f7ff 0%, #e6f0ff 100%);
  overflow: hidden;
}

/* 动态背景元素 */
.bg-elements {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 0;
}

.bg-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(7, 193, 96, 0.1);
}

.bg-circle-1 {
  width: 400rpx;
  height: 400rpx;
  top: -100rpx;
  right: -100rpx;
}

.bg-circle-2 {
  width: 300rpx;
  height: 300rpx;
  bottom: -50rpx;
  left: -50rpx;
}

.bg-code {
  position: absolute;
  font-family: monospace;
  color: rgba(0, 0, 0, 0.05);
  font-size: 24rpx;
  font-weight: bold;
  transform: rotate(-15deg);
}

.bg-code-1 {
  top: 30%;
  left: 10%;
}

.bg-code-2 {
  bottom: 20%;
  right: 10%;
}

/* 登录卡片 */
.login-card {
  position: relative;
  z-index: 1;
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-top: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.08);
}

.system-title {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.system-logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.system-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
}

/* 表单样式 */
.login-form {
  margin-bottom: 40rpx;
}

.van-cell-group--inset {
  margin: 0;
  background: transparent;
}

.form-extras {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  font-size: 28rpx;
}

.remember-me {
  display: flex;
  align-items: center;
}

.remember-me text {
  margin-left: 10rpx;
  color: #666;
}

.forgot-pwd {
  color: #1989fa;
}

.login-btn {
  margin-top: 40rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 34rpx;
  background: linear-gradient(to right, #07c160, #05a14e);
  border: none;
}

/* 考试信息 */
.exam-info {
  border-top: 1rpx solid #f5f5f5;
  padding-top: 30rpx;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #666;
}

.info-item text {
  margin-left: 15rpx;
}

/* 底部信息 */
.footer {
  position: fixed;
  bottom: 40rpx;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 24rpx;
  color: #999;
  z-index: 1;
}

.footer text:first-child {
  margin-bottom: 10rpx;
}