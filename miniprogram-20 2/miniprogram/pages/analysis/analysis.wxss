/* analysis.wxss */
.container {
  padding: 20rpx;
  min-height: 100vh;
  background: #f5f6fa;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 200rpx;
}

.loading image {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 200rpx;
}

.empty image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

/* 历史记录列表 */
.history-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.item-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #666;
}

.date {
  color: #999;
}

.stats {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.stat {
  flex: 1;
}

.label {
  font-size: 24rpx;
  color: #999;
}

.value {
  display: block;
  font-size: 36rpx;
  margin-top: 10rpx;
}

.score {
  color: #2d8cf0;
  font-weight: bold;
}

.accuracy {
  color: #19be6b;
}

.counts {
  display: flex;
  gap: 40rpx;
}

.count {
  display: flex;
  align-items: center;
}

.count image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.correct text {
  color: #19be6b;
}

.wrong text {
  color: #ed4014;
}